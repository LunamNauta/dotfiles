include catppuccin-mocha

focus_follows_mouse yes

# Variables
set $mod Mod4
set $vdir_l h
set $vdir_d j
set $vdir_u k
set $vdir_r l
set $terminal alacritty
set $app_launcher "$HOME/.config/wofi/drun.sh"
set $web_browser librewolf
set $file_browser nemo

# Basic functionality
bindsym $mod+p exec $app_launcher
bindsym $mod+q exec $terminal
bindsym $mod+o exec $web_browser
bindsym $mod+e exec $file_browser
bindsym $mod+c kill
bindsym $mod+shift+c reload
bindsym $mod+m exec swaymsg exit
floating_modifier $mod normal
bindsym $mod+f fullscreen

# Move focus
bindsym $mod+$vdir_l focus left
bindsym $mod+$vdir_d focus down
bindsym $mod+$vdir_u focus up
bindsym $mod+$vdir_r focus right
bindsym $mod+left    focus left
bindsym $mod+down    focus down
bindsym $mod+up      focus up
bindsym $mod+right   focus right
# Move to window
bindsym $mod+shift+$vdir_l move left
bindsym $mod+shift+$vdir_d move down
bindsym $mod+shift+$vdir_u move up
bindsym $mod+shift+$vdir_r move right
bindsym $mod+shift+left    move left
bindsym $mod+shift+down    move down
bindsym $mod+shift+up      move up
bindsym $mod+shift+right   move right

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
# Move to workspace
bindsym $mod+shift+1 move container to workspace number 1
bindsym $mod+shift+2 move container to workspace number 2
bindsym $mod+shift+3 move container to workspace number 3
bindsym $mod+shift+4 move container to workspace number 4
bindsym $mod+shift+5 move container to workspace number 5
bindsym $mod+shift+6 move container to workspace number 6
bindsym $mod+shift+7 move container to workspace number 7
bindsym $mod+shift+8 move container to workspace number 8
bindsym $mod+shift+9 move container to workspace number 9

# Move to scratchpad
bindsym $mod+shift+minus move scratchpad
# Show next tile in scratchpad
bindsym $mod+minus scratchpad show

# Split direction
bindsym $mod+b layout toggle split
#bindsym $mod+b splith
#bindsym $mod+v splitv
# Switch layout style
#bindsym $mod+s layout stacking
#bindsym $mod+w layout tabbed
# Toggle floating
bindsym $mod+shift+space floating toggle
bindsym $mod+space focus mode_toggle
# Select all tiles
bindsym $mod+a focus parent

mode "resize" {
    # Left  -> shrink width
    # Right -> grow width
    # Up    -> shrink height
    # Down  -> grow height
    bindsym $vdir_l resize shrink width 10px
    bindsym $vdir_d resize grow height 10px
    bindsym $vdir_u resize shrink height 10px
    bindsym $vdir_r resize grow width 10px
    bindsym left    resize shrink width 10px
    bindsym down    resize grow height 10px
    bindsym up      resize shrink height 10px
    bindsym right   resize grow width 10px
    bindsym shift+$vdir_l resize shrink width 20px
    bindsym shift+$vdir_d resize grow height 20px
    bindsym shift+$vdir_u resize shrink height 20px
    bindsym shift+$vdir_r resize grow width 20px
    bindsym shift+Left    resize shrink width 20px
    bindsym shift+down    resize grow height 20px
    bindsym shift+up      resize shrink height 20px
    bindsym shift+right   resize grow width 20px
    # Return to default mode
    bindsym return mode "default"
    bindsym escape mode "default"
}
bindsym $mod+r mode "resize"

output HDMI-A-1 {
    mode 1920x1080@120Hz
    bg "$HOME/personal/dotfiles/backgrounds/CatBackground3.png" fill
}
input * {
    accel_profile "flat"
    pointer_accel 0
}

smart_gaps on
smart_borders on
gaps outer 3
gaps inner 3

# target                 title     bg    text   indicator  border
client.focused           $lavender $base $text  $rosewater $lavender
client.focused_inactive  $overlay0 $base $text  $rosewater $overlay0
client.unfocused         $overlay0 $base $text  $rosewater $overlay0
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

exec "ags run $HOME/personal/dotfiles/ags_sway"

exec swayidle -w \
        timeout 300 'swaylock -l -f --clock --indicator' \
        timeout 600 'swaymsg "output * dpms off"' \
        timeout 900 'systemctl suspend' \
        resume 'swaymsg "output * dpms on"' \
        before-sleep 'swaylock -l -f --clock --indicator'

default_border pixel 1

include /etc/sway/config.d/*
